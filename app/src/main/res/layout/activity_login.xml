<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:orientation = "vertical"
    android:background="@drawable/white_pattern"
    tools:context = ".Activity.Login">

    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:orientation = "vertical">

        <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_marginTop = "40dp"
            android:orientation = "vertical"
            android:padding = "15dp">

            <RelativeLayout
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content">

                <LinearLayout
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_centerInParent = "true">

                   <TextView android:autoSizeTextType="uniform"
                        android:id="@+id/login_sign"
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        android:gravity = "center"
                        android:text = "SIGN "
                        android:textAlignment = "viewEnd"
                        android:textColor = "#383051"
                        android:textSize = "45dp"
                        android:textStyle = "bold" />

                   <TextView android:autoSizeTextType="uniform"
                        android:id="@+id/login_in"
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        android:gravity = "center"
                        android:text = "IN"
                        android:textAlignment = "viewStart"
                        android:textColor = "#333333"
                        android:textSize = "45dp" />
                </LinearLayout>
            </RelativeLayout>


           <TextView android:autoSizeTextType="uniform"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_weight = "1"
                android:gravity = "center"
                android:text = "HEY THERE, WELCOME TO WARDROBE"
                android:textColor = "#333333"
                android:textSize = "12dp" />
        </LinearLayout>

        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_marginEnd = "40dp"
            android:layout_marginStart = "40dp"
            android:layout_marginTop = "60dp"
            android:orientation = "vertical">


            <LinearLayout
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"

                android:layout_marginEnd = "20dp"
                android:layout_marginStart = "20dp">

                <ImageView
                    android:layout_width = "35dp"
                    android:layout_height = "35dp"
                    android:padding = "10dp"
                    android:src = "@mipmap/username" />


                <EditText
                    android:id="@+id/login_username"
                    android:layout_width = "match_parent"
                    android:layout_height = "40dp"
                    android:backgroundTint = "@color/colorTransparent"
                    android:hint = "User Name"
                    android:inputType = "textEmailAddress"
                    android:singleLine = "true"
                    android:textSize = "@dimen/Login_text_size" />


            </LinearLayout>

            <View
                android:layout_width = "match_parent"
                android:layout_height = "1dp"
                android:background = "#000000" />

            <LinearLayout
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_marginEnd = "20dp"
                android:layout_marginStart = "20dp"
                android:layout_marginTop = "15dp">

                <ImageView
                    android:layout_width = "35dp"
                    android:layout_height = "35dp"
                    android:padding = "@dimen/Login_image_padding"
                    android:src = "@mipmap/password" />


                <EditText
                    android:id="@+id/login_password"
                    android:layout_width = "match_parent"
                    android:layout_height = "40dp"
                    android:backgroundTint = "@color/colorTransparent"
                    android:hint = "*****"
                    android:inputType = "textPassword"
                    android:singleLine = "true"
                    android:textSize = "@dimen/Login_text_size" />

            </LinearLayout>

            <View
                android:layout_width = "match_parent"
                android:layout_height = "1dp"
                android:background = "#000000" />

            <RelativeLayout
                android:layout_width = "match_parent"
                android:layout_height = "match_parent"

                android:layout_marginTop = "15dp">

                <Button
                    android:id = "@+id/login_forgot_pass"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_weight = "1"
                    android:background = "@color/colorTransparent"
                    android:text = "Forgot Password?"
                    android:textAlignment = "viewStart"
                    android:textAllCaps = "false"
                    android:textColor = "#24205A"
                    android:textSize = "@dimen/Login_text_size"
                     />


                <LinearLayout
                    android:id = "@+id/login_signup_btn"
                    android:layout_width = "wrap_content"
                    android:layout_height = "45dp"
                    android:layout_alignParentRight = "true"
                    android:gravity = "center">

                   <TextView
                        android:layout_width = "wrap_content"
                        android:layout_height = "match_parent"
                        android:gravity = "center_vertical"
                        android:text = "New to Wardrobe? "
                        android:textColor = "#24205A"
                        android:textSize = "@dimen/Login_text_size"
                        />

                   <TextView
                        android:layout_width = "wrap_content"
                        android:layout_height = "match_parent"
                        android:gravity = "center_vertical"
                        android:text = "Sign Up "
                        android:textColor = "#FB3C3C"
                        android:textSize = "@dimen/Login_text_size"
                        android:textStyle = "bold" />

                </LinearLayout>


            </RelativeLayout>

            <Button
                android:id = "@+id/login_btn_login"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_marginTop = "15dp"
                android:background = "@drawable/login_btn_round_corner"
                android:text = "sign in"
                android:textColor = "@color/colorPrimary"
                android:textSize = "@dimen/Login_btn_size" />

           <TextView android:autoSizeTextType="uniform"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_marginTop = "15dp"
                android:gravity = "center"
                android:text = "OR"
                android:textSize = "@dimen/Login_text_size" />

            <LinearLayout
                android:layout_width = "match_parent"
                android:layout_height = "match_parent"
                android:layout_marginTop = "15dp">

                <ImageView
                    android:id="@+id/login_fb_signin"
                    android:layout_width = "match_parent"
                    android:layout_height = "50dp"
                    android:layout_weight = "1"
                    android:padding = "5dp"
                    android:src = "@drawable/facebook_login" />

                <com.facebook.login.widget.LoginButton
                    android:id="@+id/login_fb_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
                <ImageView
                    android:id="@+id/login_gplus_signin"
                    android:layout_width = "match_parent"
                    android:layout_height = "50dp"
                    android:layout_weight = "1"
                    android:padding = "5dp"
                    android:src = "@drawable/googleplus_login" />


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</ScrollView>