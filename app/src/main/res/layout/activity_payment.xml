<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout
        xmlns:android = "http://schemas.android.com/apk/res/android"
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:focusable = "true"

        android:focusableInTouchMode = "true"
        android:orientation = "vertical">

        <android.support.design.widget.AppBarLayout
            android:id = "@+id/appbar"

            android:background="@drawable/drop_shadow"
            android:layout_width = "match_parent"
            android:layout_height = "?attr/actionBarSize"
            android:elevation = "5dp">

        <android.support.v7.widget.Toolbar
            android:id = "@+id/toolbar"
            android:layout_width = "match_parent"
            android:layout_height = "?attr/actionBarSize"
            android:layout_gravity = "center"
            android:background = "?attr/colorPrimary"
            android:gravity = "center">
        <RelativeLayout
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_margin = "20dp">

            <ImageView
                android:id = "@+id/payment_back"
                android:layout_width = "20dp"
                android:layout_height = "20dp"
                android:src = "@mipmap/arrow_left" />

           <TextView android:autoSizeTextType="uniform"
                android:id = "@+id/payment_title"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_centerInParent = "true"
                android:text = "Payment"
                android:textAllCaps = "true"
               android:textSize="15dp"
                android:textColor = "@color/colorAccent"
               android:autoSizeMinTextSize="15dp"
                android:textStyle = "bold" />

        </RelativeLayout>
        </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <ScrollView xmlns:android = "http://schemas.android.com/apk/res/android"
            xmlns:app = "http://schemas.android.com/apk/res-auto"
            xmlns:tools = "http://schemas.android.com/tools"
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            tools:context = "com.pro.wardrobe.Activity.Payment">
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            android:orientation = "vertical">

            <android.support.v7.widget.CardView
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_marginBottom = "20dp"
                android:baselineAligned = "false"
                android:padding = "10dp"
                android:layout_margin="5dp"
                app:cardCornerRadius = "10dp"

                app:cardElevation = "5dp">

                <LinearLayout
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:layout_margin = "35dp"
                    android:orientation = "vertical">


                    <RelativeLayout
                        android:layout_width = "match_parent"
                        android:layout_height = "wrap_content"
                        android:padding = "5dp">

                       <TextView android:autoSizeTextType="uniform"
                            android:layout_width = "wrap_content"
                            android:layout_height = "wrap_content"
                            android:layout_gravity = "start"
                            android:text = "Lipsy Crown T-shirt"
                            android:textColor = "@color/colorAccent"
                            android:textSize = "12dp"
                            android:textStyle = "bold" />

                       <TextView android:autoSizeTextType="uniform"
                            android:layout_width = "wrap_content"
                            android:layout_height = "wrap_content"
                            android:layout_alignParentRight = "true"
                            android:layout_gravity = "start"
                            android:text = "84 QAR"
                            android:textColor = "@color/colorAccent"
                            android:textSize = "12dp"
                            android:textStyle = "bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width = "match_parent"
                        android:layout_height = "wrap_content"
                        android:padding = "5dp">

                       <TextView android:autoSizeTextType="uniform"
                            android:layout_width = "wrap_content"
                            android:layout_height = "wrap_content"
                            android:layout_gravity = "start"
                            android:text = "Lipsy Crown T-shirt"
                            android:textColor = "@color/colorAccent"
                            android:textSize = "12dp"
                            android:textStyle = "bold" />

                       <TextView android:autoSizeTextType="uniform"
                            android:layout_width = "wrap_content"
                            android:layout_height = "wrap_content"
                            android:layout_alignParentRight = "true"
                            android:layout_gravity = "start"
                            android:text = "45 QAR"
                            android:textColor = "@color/colorAccent"
                            android:textSize = "12dp"
                            android:textStyle = "bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width = "match_parent"
                        android:layout_height = "wrap_content"
                        android:padding = "5dp">

                       <TextView android:autoSizeTextType="uniform"
                            android:layout_width = "wrap_content"
                            android:layout_height = "wrap_content"
                            android:layout_gravity = "start"
                            android:text = "Lipsy Crown T-shirt"
                            android:textColor = "@color/colorAccent"
                            android:textSize = "12dp"
                            android:textStyle = "bold" />

                       <TextView android:autoSizeTextType="uniform"
                            android:layout_width = "wrap_content"
                            android:layout_height = "wrap_content"
                            android:layout_alignParentRight = "true"
                            android:layout_gravity = "start"
                            android:text = "84 QAR"
                            android:textColor = "@color/colorAccent"
                            android:textSize = "12dp"
                            android:textStyle = "bold" />

                    </RelativeLayout>

                    <View
                        android:layout_width = "match_parent"
                        android:layout_height = "1dp"
                        android:layout_marginTop = "5dp"
                        android:background = "#D3D5DD" />

                    <RelativeLayout
                        android:layout_width = "match_parent"
                        android:layout_height = "wrap_content"
                        android:padding = "5dp">

                       <TextView android:autoSizeTextType="uniform"
                            android:layout_width = "wrap_content"
                            android:layout_height = "wrap_content"
                            android:layout_gravity = "start"
                            android:text = "Subtotal: "
                            android:textColor = "@color/colorAccent"
                            android:textSize = "12dp"
                            android:textStyle = "bold" />

                       <TextView android:autoSizeTextType="uniform"
                            android:layout_width = "wrap_content"
                            android:layout_height = "wrap_content"
                            android:layout_alignParentRight = "true"
                            android:layout_gravity = "start"
                            android:text = "213 QAR"
                            android:textColor = "@color/colorAccent"
                            android:textSize = "12dp"
                            android:textStyle = "bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width = "match_parent"
                        android:layout_height = "wrap_content"
                        android:padding = "5dp">

                       <TextView android:autoSizeTextType="uniform"
                            android:layout_width = "wrap_content"
                            android:layout_height = "wrap_content"
                            android:layout_gravity = "start"
                            android:text = "Shipping &amp; Return: "
                            android:textColor = "@color/colorAccent"
                            android:textSize = "12dp"
                            android:textStyle = "bold" />

                       <TextView android:autoSizeTextType="uniform"
                            android:layout_width = "wrap_content"
                            android:layout_height = "wrap_content"
                            android:layout_alignParentRight = "true"
                            android:layout_gravity = "start"
                            android:text = "Free"
                            android:textColor = "@color/colorfree"
                            android:textSize = "12dp"
                            android:textStyle = "bold" />

                    </RelativeLayout>

                    <View
                        android:layout_width = "match_parent"
                        android:layout_height = "1dp"
                        android:layout_marginTop = "5dp"
                        android:background = "#D3D5DD" />

                    <RelativeLayout
                        android:layout_width = "match_parent"
                        android:layout_height = "wrap_content"
                        android:padding = "5dp">

                       <TextView android:autoSizeTextType="uniform"
                            android:layout_width = "wrap_content"
                            android:layout_height = "wrap_content"
                            android:layout_gravity = "start"
                            android:text = "Total: "
                            android:textColor = "@color/colorAccent"
                            android:textSize = "12dp"
                            android:textStyle = "bold" />

                       <TextView android:autoSizeTextType="uniform"
                            android:layout_width = "wrap_content"
                            android:layout_height = "wrap_content"
                            android:layout_alignParentRight = "true"
                            android:layout_gravity = "start"
                            android:text = "213 QAR"
                            android:textColor = "@color/colorAccent"
                            android:textSize = "12dp"
                            android:textStyle = "bold" />

                    </RelativeLayout>

                   <TextView android:autoSizeTextType="uniform"
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        android:layout_gravity = "start"
                        android:layout_marginBottom = "30dp"
                        android:layout_marginTop = "30dp"
                        android:padding = "5dp"
                        android:text = "Select Payment Method"
                        android:textColor = "@color/colorgraytxt"
                        android:textSize = "12dp"
                        android:textStyle = "bold" />

                    <Spinner
                        style = "@style/mySpinnerItemStyle"
                        android:layout_width = "match_parent"
                        android:layout_height = "wrap_content"
                        android:layout_gravity = "start"
                        android:layout_marginTop = "30dp"
                        android:entries = "@array/payment"
                        android:padding = "5dp"
                        android:text = "Select Payment Method"
                        android:textColor = "@color/colorgraytxt"
                        android:textSize = "12dp"
                        android:textStyle = "bold" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_marginBottom = "20dp"
                android:background = "@drawable/login_facebook_blue_border">


                <LinearLayout
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:layout_margin = "25dp"
                    android:orientation = "vertical">

                    <EditText
                        android:layout_width = "match_parent"
                        android:layout_height = "wrap_content"
                        android:layout_marginStart = "10dp"
                        android:background = "#00000000"
                        android:hint = "Name On Card"
                        android:textColor = "#ffffff"
                        android:textColorHint = "#ffffff"
                        android:textSize = "12dp" />

                    <View
                        android:layout_width = "match_parent"
                        android:layout_height = "1dp"
                        android:layout_marginTop = "10dp"
                        android:background = "#ffffff" />

                    <EditText
                        android:layout_width = "match_parent"
                        android:layout_height = "wrap_content"
                        android:layout_marginStart = "10dp"
                        android:layout_marginTop = "15dp"
                        android:background = "#00000000"
                        android:hint = "Card Number"
                        android:textColor = "#ffffff"
                        android:textColorHint = "#ffffff"
                        android:textSize = "12dp" />

                    <View
                        android:layout_width = "match_parent"
                        android:layout_height = "1dp"
                        android:layout_marginTop = "10dp"
                        android:background = "#ffffff" />


                    <LinearLayout
                        android:layout_width = "match_parent"
                        android:layout_height = "wrap_content"

                        android:orientation = "horizontal"
                        android:weightSum = "10">

                        <LinearLayout
                            android:layout_width = "match_parent"
                            android:layout_height = "wrap_content"
                            android:layout_marginEnd = "5dp"
                            android:layout_weight = "3"
                            android:orientation = "vertical">

                            <EditText
                                android:layout_width = "match_parent"
                                android:layout_height = "wrap_content"
                                android:layout_marginStart = "10dp"
                                android:layout_marginTop = "15dp"
                                android:background = "#00000000"
                                android:hint = "Exp:"
                                android:textColor = "#ffffff"
                                android:textColorHint = "#ffffff"
                                android:textSize = "12dp" />

                            <View
                                android:layout_width = "match_parent"
                                android:layout_height = "1dp"
                                android:layout_marginTop = "10dp"
                                android:background = "#ffffff" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width = "match_parent"
                            android:layout_height = "wrap_content"
                            android:layout_marginStart = "5dp"
                            android:layout_weight = "7"
                            android:orientation = "vertical">

                            <EditText
                                android:layout_width = "match_parent"
                                android:layout_height = "wrap_content"
                                android:layout_marginStart = "10dp"
                                android:layout_marginTop = "15dp"
                                android:background = "#00000000"
                                android:hint = "cvv"
                                android:textColor = "#ffffff"
                                android:textColorHint = "#ffffff"
                                android:textSize = "12dp" />

                            <View
                                android:layout_width = "match_parent"
                                android:layout_height = "1dp"
                                android:layout_marginTop = "10dp"
                                android:background = "#ffffff" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


           <TextView android:autoSizeTextType="uniform"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_gravity = "start"
                android:layout_marginBottom = "20dp"
                android:gravity = "center"
                android:padding = "5dp"
                android:text = "This card will be securely saved for a faster payment experience.\n CVV number will not be saves."
                android:textColor = "@color/colorgraytxt"
                android:textSize = "8dp"
                android:textStyle = "bold" />


            <Button
                android:id = "@+id/payment_btn_next"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_marginBottom = "15dp"
                android:layout_marginTop = "15dp"
                android:background = "@drawable/login_btn_round_corner"
                android:text = "Next"
                android:textColor = "@color/colorPrimary"
                android:textSize = "@dimen/Login_btn_size" />
        </LinearLayout>
        </ScrollView>

    </LinearLayout>

